<view class="register-panel">
  <view class="xplanner-panel">
    <image class="xplanner-icon" src="/icons/XPlannerLogo.png" />
    <view class="xplanner-title">XPlanner</view>
    <view class="xplanner-description">用户注册</view>
  </view>
  <view class="input-panel">
    <view class="name-input-panel">
      <input class="name-input" placeholder="名称" bindinput="getName" />
    </view>
    <view class="password-input-panel">
      <input class="password-input" placeholder="密码" bindinput="getPassword" password="true" />
    </view>
    <view class="password-input-panel">
      <input class="password-input" placeholder="确认密码" bindinput="repeatPassword" password="true" />
      <image src="/icons/log.png" class="register-icon" bindtap="register" />
    </view>
  </view>
</view>