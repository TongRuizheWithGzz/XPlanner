.add-schedule {
  float: right;
  /* background-color: #fff; */
  position: fixed;
  bottom: 20px;
  right: 20px;
  border: 0 solid #fff;
  border-radius: 500px;
  height: 40px;
  width: 40px;
}

.weui-panel {
  background-color: #fff;
  margin-top: 10px;
  position: relative;
  overflow: hidden;
}

.weui-panel:before {
  top: 0;
  border-top: 1rpx solid #e5e5e5;
}

.weui-panel:after, .weui-panel:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #e5e5e5;
}

.weui-panel:after {
  bottom: 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.weui-panel__bd {
  background-color: #fff;
}

.weui-panel__hd {
  padding: 14px 15px 10px;
  color: #999;
  font-size: 13px;
  position: relative;
}

.weui-media-box {
  padding: 15px;
  position: relative;
}

.weui-media-box_appmsg {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}

.weui-cell_active {
  background-color: #ececec;
}

.weui-media-box__bd_in-appmsg {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.weui-media-box__title {
  font-weight: 400;
  font-size: 20px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-break: break-all;
}

.weui-media-box__desc {
  color: #999;
  font-size: 13px;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.weui-media-box__hd_in-appmsg {
  margin-right: 0.8em;
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
}

.weui-media-box__thumb {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.schedule-icon {
  width: 14px;
  height: 14px;
  margin-right: 5px;
  padding-top: 2px;
}

.schedule-end-time {
  padding-left: 19px;
}

.calendar {
  background-color: #fff;
  border-bottom: 1px solid #ececec;
  margin-bottom: 4px;
}

.list {
  height: 100%;
  margin-bottom: 10px;
  width: 100%;
}

.line {
  height: 80%;
  width: 3px;
  background-color: #46c4f3;
  border-radius: 1000px;
  transition: all 0.3s;
}

.item, .se-item {
  background-color: white;
  height: 85px;
  margin: 18px 120px 18px 10px;
  display: flex;
  transition: height 0.3s, margin 0.3s;
  flex-direction: row;
  align-items: center;
  -moz-box-shadow: 2px 3px 3px #a3a3a3;
  -webkit-box-shadow: 2px 3px 3px #a3a3a3;
  box-shadow: 2px 3px 3px #a3a3a3;
  border-radius: 10px;
  z-index: 100;
}

.se-item {
  position: relative;
  margin: -10px 15px -10px 15px;
  height: 200px;
  -moz-box-shadow: 2px 3px 30px #969696;
  -webkit-box-shadow: 2px 3px 30px #969696;
  box-shadow: 2px 3px 30px #969696;
  z-index: 1000;
}

.left, .right, .se-right {
  height: 100%;
  display: flex;
  transition: all 0.3s;
  flex-direction: column;
}

.left {
  justify-content: space-around;
  width: 75px;
  align-items: center;
  font-size: 15px;
  transition: all 0.3s;
}

.right, .se-right {
  font-size: 13.4px;
  margin-left: 15px;
  transition: all 0.3s;
  font-weight: bold;
}

.right {
  width: 145px;
  transition: all 0.3s;
  margin-top: 20px;
}

.se-right {
  width: 210px;
  transition: all 0.3s;
  margin-top: 30px;
  justify-content: flex-start;
}

.start_time {
  font-weight: bolder;
}

.end_time {
  font-weight: lighter;
  color: #616161;
}

.address {
  margin-top:12px;
  font-weight: light;
  color: #a3a3a3;
}

.title, .se-title {
  margin-left: 5px;
}

.se-title {
  font-size: 18px;
  transition: all 0.3s;
}

.buttons {
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 5%;
}

.button {
  height: 30px;
  width: 30px;
}

.description {
  margin-top:1px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  font-weight: lighter;
}
