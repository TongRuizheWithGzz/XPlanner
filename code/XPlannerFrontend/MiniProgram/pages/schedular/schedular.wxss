}

.calendar-next-month-icon {
  width: 20px;
  height: 20px;
  float: right;
}

.calendar-content {
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.calendar-weekday-name {
  display: flex;
  flex-direction: row;
  height: 30px;
}

.calendar-weekday-name-block {
  width: 14.29%;
  text-align: center;
  font-size: 12px;
  padding-top: 5px;
}

.calendar-weekday {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

