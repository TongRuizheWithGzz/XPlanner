<view class="calendar">
  <calendar year="{{showYear}}" month="{{showMonth}}" days-color="{{dayList}}" show-more-days="{{true}}" binddayClick="selectDay"
    bindnextMonth="nextMonth" bindprevMonth="prevMonth" />
</view>
<view class='items'>
  <view class='list' bindtap='unselect'>

    <view wx:for="{{showItems}}" wx:key="{{*this}}" class="{{showSelect == index ? 'se-item':'item'}}" catchtap='select' data-index='{{index}}'>
      <view class="{{showSelect == index ? 'se-left':'left'}}">
        <view class='start_time'>{{item.start_concret_time}}</view>
        <view wx:if="{{showSelect != index}}" class='plain'></view>
        <view class='end_time'>{{item.end_concret_time}}</view>
      </view>
      <view class='line'></view>
      <view class="{{showSelect == index ? 'se-right':'right'}}">
        <view class="{{showSelect == index ? 'se-title':'title'}}">{{item.title}}</view>
        <view wx:if="{{showSelect == index}}" class='address'>
          <image src="/icons/loc.png" style="height:15px;width:15px;margin-right:3px;"></image>
          <text>{{item.address}}</text>
        </view>
        <view wx:if="{{showSelect == index}}" class='description'>
          <image src="/icons/des.png" style="height:13px;width:13px;margin-right:5px;"></image>
          <text>{{item.description}}</text>
        </view>
      </view>
      <!-- <view class="{{showSelect == index ? 'se-operate':'operate'}}"> -->
      <!-- <view class="{{showSelect == index ? 'se-checkbox':'checkbox'}}">
        <image class="{{showSelect == index ? 'se-checkbox-icon':'checkbox-icon'}}" catchtap="selectCheckbox" data-index="{{index}}"
          wx:if="{{item.selected}}" src="/icons/checkbox-checked.png"></image>
        <image class="{{showSelect == index ? 'se-checkbox-icon':'checkbox-icon'}}" catchtap="selectCheckbox" data-index="{{index}}"
          wx:if="{{!item.selected}}" src="/icons/checkbox.png"></image>
      </view> -->
      <view class="{{showSelect == index ? 'buttons':'one-button'}}">
        <image class="{{showSelect == index ? 'se-checkbox-icon':'checkbox-icon'}}" catchtap="selectCheckbox" data-index="{{index}}" wx:if="{{item.selected}}" src="/icons/checkbox-checked.png"></image>
        <image class="{{showSelect == index ? 'se-checkbox-icon':'checkbox-icon'}}" catchtap="selectCheckbox" data-index="{{index}}" wx:if="{{!item.selected}}" src="/icons/checkbox.png"></image>
        <image wx:if="{{showSelect == index}}" src='/icons/detail.png' class='button' catchtap='detail' data-index="{{index}}"></image>
        <!-- <image wx:if="{{showSelect == index}}" src='/icons/edit.png' class='button' catchtap='edit' data-index="{{index}}"></image> -->
        <image wx:if="{{showSelect == index}}" src='/icons/delete.png' class='button' catchtap='delete' data-index="{{index}}"></image>
      </view>
      <!-- </view> -->
      <!-- <view class="{{showSelect == index ? 'se-checkbox':'checkbox'}}">
        <image class="checkbox-icon" catchtap="selectCheckbox" data-index="{{index}}" wx:if="{{item.selected}}" src="/icons/checkbox-checked.png"></image>
        <image class="checkbox-icon" catchtap="selectCheckbox" data-index="{{index}}" wx:if="{{!item.selected}}" src="/icons/checkbox.png"></image>
      </view> -->
    </view>
  </view>
</view>
<image src="/icons/plus-circle.png" class="add-schedule" bindtap="add"></image>