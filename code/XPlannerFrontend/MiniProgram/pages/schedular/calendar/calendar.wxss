.calendar-container {
  /* width: 90%; */
  display: flex;
  flex-direction: column;
  align-items: center; 
}

.calendar-title {
  height: 72rpx;
  font-size: 13px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.calendar-title-month {
  font-size: 40rpx;  
  width: 90%;
  text-align: center;
  font-weight: bold;
}

.calendar-arrow-box {
  width: 100px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.calendar-arrow {
  height: 45rpx;
  width: 45rpx;
}

.calendar-week-type {
  height: 30px;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.calendar-week-box {
  height: 30px;
  width: 14.28%;
  text-align: center;
  font-size: 35rpx;
}

.calendar-days-list {
  height: 520rpx;
}

.calendar-content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 420rpx;
}

.calendar-day-box {
  height: 85rpx;
  width: 14.28%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 34.5rpx;
}

.calendar-swiper {
  height: 520rpx;
}

.calendar-not-current-month-day {
  color: #e5e5e5;
}

.calendar-selected-day {
  color: #ffffff;
  width: 73rpx;
  height: 73rpx;
  background-color: orange;
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.calendar-have-item-day {
  color: #ffffff;
  width: 73rpx;
  height: 73rpx;
  background-color: blueviolet;
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.calendar-days-list {
  width: 100%;
}