/* pages/store/detail/detail.wxss */

.img {
  width: 100%;
  height: 700rpx;
}

.name, .des {
  color: white;
  position: fixed;
  top: 50rpx;
  left: 50rpx;
  width: 100%;
  height: 100%;
  font-size: 40px;
}

.back {
  position: fixed;
  top: 70rpx;
  left: 650rpx;
  width: 25px;
  height: 25px;
}

.des {
  color: #ccc;
  top: 140rpx;
  left: 50rpx;
  font-size: 17px;
}

.down {
  position: fixed;
  margin: 50rpx;
  width: 87%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  top: 1050rpx;
}

.icon {
  width: 50px;
  height: 50px;
  border-radius: 10px;
}

.button, .press {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  width: 120rpx;
  font-size: 27rpx;
  font-weight: bolder;
  color: #06f;
  border-radius: 20px;
  background-color: white;
}

.press {
  background-color: #b3b3b3;
}

.bottom {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.desc {
  margin: 50rpx;
  font-size: 18px;
  color: #666;
}

.name1 {
  font-size: 22px;
  font-weight: bold;
}

.msg {
  font-size: 13px;
  font-weight: bold;
  color: #666;
}

.right {
  height: 75%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: space-around;
  margin-left: -90rpx;
}
