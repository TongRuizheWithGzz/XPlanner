page {
  height: 100%;
  background-color: white;
}

.weui-navbar {
  height: 28px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.weui-navbar .default-item {
  width: 20%;
  text-align: center;
  font-size: 33rpx;
  color: #8a8a8a;
  font-family: Courier New, Courier, monospace;
  font-weight: bolder;
}

.weui-navbar .item_on {
  font-weight: bold;
  color: #000;
  border-bottom: 2px solid #000;
}

.weui-navbar-slider {
  position: absolute;
  width: 160rpx;
  content: "";
  background: #3e3;
  left: 12.5rpx;
  transition: transform 0.3s;
}

.swiper-box {
  height: 100%;
  border-bottom: 1px solid #d1d1d1;
}

.swiper-box .swiper-item {
  text-align: center;
  padding-top: 0rpx;
  height: 50%;
}

.placeholder {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: #ebebeb;
  height: 2.3em;
  line-height: 2.3em;
  color: #cfcfcf;
}

.manage-btn {
  margin-top: 10px;
  clear: both;
  width: 95%;
  align-items: center;
}

.weui-grids {
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 33.33333333%;
  /* width: 25%; */
  box-sizing: border-box;
  /* border-right: 1rpx solid #fff; */
  /* border-bottom: 1rpx solid #fff; */
}
.weui-grid__icon {
  display: block;
  width: 60px;
  height: 60px;
  margin: 0 auto;
  border-radius: 14px;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 13px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-badge {
  display: inline-block;
  padding: 0.03em 0.33em;
  min-width: 13.7px;
  border-radius: 18px;
  background-color:red;
  color: #fff;
  line-height: 1.6;
  text-align: center;
  font-size: 15px;
  vertical-align: center;
}

.weui-badge_dot {
  padding: 0.4em;
  min-width: 0;
}

.swiper-item {
  display: block;
  height: 150px;
}

.weui-cells__title {
  margin-top: 0.77em;
  margin-bottom: 0.3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999;
  font-size: 14px;
}
