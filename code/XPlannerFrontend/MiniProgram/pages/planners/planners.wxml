<view class="weui-grids">
  <block wx:for="{{extensions}}" wx:key="{{item.id}}">
    <navigator url="{{item.extension_path}}" class="weui-grid" hover-class="weui-grid_active">
      <view wx:if="{{item.messages > 0 && item.visible}}" class="weui-badge" style="position: absolute;top: 0.5em;right: 1.75em;">
        <text>{{item.messages}}</text>
      </view>
      <image class="weui-grid__icon" src="{{item.icon}}" />
      <view class="weui-grid__label">{{item.name}}</view>
    </navigator>
  </block>
</view>