.movie {
  display: flex;
}

.title {
  font-size: 30px;
}

.movie-swiper {
  height: 47vh;
}

.movie-card {
  height: 100%;
  width: 360px;
  background: #fff;
  margin-right: 15rpx;
  border-radius: 10px;
}

.item {
  display: flex;
  flex-direction: column;
}

.icon {
  height: 28px;
  width: 28px;
  margin: 10px;
}

.icon1 {
  height: 20px;
  width: 20px;
  margin-left: 3px;
  margin-right: 13px;
  margin-top: 3px;
}

.name {
  font-size: 19px;
}

.all {
  width: 86.3%;
  border-bottom: 1px solid #ddd;
  margin-left: 22px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70px;
}

.keeper {
  background-color: white;
  height: 40px;
  width: 40px;
  border-radius: 10px;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60px;
}

.address {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16px;
  margin-top: 7px;
  font-weight: bolder;
  color: #a3a3a3;
}

.description {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 13px;
  overflow: hidden;
  display: -webkit-box;
  font-weight: lighter;
  font-size: 15px;
}

.in {
  margin: 18px;
  height: 100%;
}

.add {
  position: absolute;
  bottom: 15px;
  right: 33px;
  font-size: 16px;
  font-weight: bold;
}

.ca {
  width: 32px;
  height: 25px;
}

.controller {
  background-color: #fff;
  float: right;
  position: fixed;
  bottom: 0px;
  /* border-radius: 70px; */
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-shadow: -2px 0px 9px #a3a3a3;
  font-size: 17px;
  font-weight: bold;
}

.left {
  margin-left: 13px;
}

.right {
  margin-right: 13px;
}

.black {
  color: #000;
}

.add-name {
  margin-top: 23px;
  color: #999;
  font-weight: bold;
  font-size: 17px;
  margin-left: 5px;
  margin-bottom:8px;
}

.foodinfo {
  margin-left: 6%;
}

.card {
  background-color: white;
  transition: all 0.3s;
  box-shadow: 0px 0px 6px #d3d3d3;
  border-radius: 15px;
  z-index: 0;
}

.foods {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.food-item {
  width: 21%;
  height: 300rpx;
  margin-right: 4%;
  margin-bottom: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.food-name {
  font-size: 16px;
  text-align: center;
  width: 80%;
}

.food-cal {
  font-size: 13px;
  color: #999;
  font-weight: bold;
}

.food-icon {
  height: 28px;
  width: 30px;
  margin-top: 8px;
}

.box {
  width: 28px;
  height: 28px;
  margin-bottom: 10px;
}

.block {
  display: flex;
  flex-direction: row;
}

.pad {
  height: 40px;
}

.bot {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.press {
  background-color: #eee;
}

.eaten-title {
  color: #999;
  font-weight: bold;
  font-size: 17px;
  margin-left: 28px;
  margin-top: 23px;
  margin-bottom:10px;
}

.card {
  background-color: white;
  transition: all 0.3s;
  box-shadow: 2px 3px 3px #a3a3a3;
  border-radius: 10px;
  z-index: 0;
}

.eaten-items{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
