  margin-left:6%;
  flex-wrap:wrap;
  width:90.5%;
  
}

.eaten-item{
  margin-bottom: 12px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  height:90px;
  width:48%;
}

.note{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  background-color:#eee;
  box-shadow: 0px 0px 0px #555;
  
}

.not{
  width:80%;
  font-size:28rpx;
  height:80%;
  margin-top:20rpx;
  color:#333;
  font-weight:bold;
}

.fd-name{
  margin-left:17px;
